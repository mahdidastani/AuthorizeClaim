@model ClaimSample.DataLayer.Entities.User
@{
    ViewData["Title"] = "Register";
}
    <div class="col-12 col-md-3 register-right">
        <img src="/images/logo_white.png" alt="" />
        <h3>خوش آمدید</h3>
        <p> </p>
        <a class="btn btn-sm" asp-action="login" style=" border: none;    border-radius: 1.5rem; padding: 2%; width: 80%;  background: #f8f9fa; font-weight: bold; color: #383d41; margin-top: 30%; margin-bottom: 3%; "> ایجاد یک حساب</a>

    </div>
<div class="col-12 col-md-9 register-left">

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <h3 class="register-heading">ثبت نام  </h3>
            <form class="row register-form" asp-action="Register" method="post">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="* نام"  asp-for="FirstName" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="* نام خانوادگی" asp-for="LastName"/>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="رمز عبور *"  asp-for="Password" />
                    </div>

                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="پست الکترونیک *"  asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <input type="text" minlength="10" maxlength="10"   class="form-control" placeholder="* تلفن تماس"  asp-for="phoneNumber" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="تکرار رمز عبور *"   />
                    </div>
                    <input type="submit" class="btnRegister" value="عضویت" />
                </div>
            </form>
        </div>

    </div>
</div>