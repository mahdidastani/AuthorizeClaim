@model ClaimSample.Core.ViewModels.LoginViewModel ;
@{
    ViewData["Title"] = "Login";
}

    
        <div class="col-12 col-md-3 register-right">
            <img src="/images/logo_white.png" alt="" />
            <p>تنها در چند ثانیه در سایت ثبت نام کنید.</p>
           
            <a class="btn btn-sm" asp-action="Register" style=" border: none;    border-radius: 1.5rem; padding: 2%; width: 80%;  background: #f8f9fa; font-weight: bold; color: #383d41; margin-top: 30%; margin-bottom: 3%; "> ایجاد یک حساب</a>
        </div>
        <div class="col-12 col-md-9 register-left">

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading"> ورود </h3>
                    <form asp-action="login" method="post" >
                        <div class="row register-form">
                            <div class="col-12 col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="*شناسه کاربری " asp-for="Email" />
                                </div>
                                <div class="form-group">
                                    <input   class="form-control" type="password" placeholder="* رمز عبور" asp-for="Password" />
                                </div>
                                <div class="form-group">
                                    <div class="maxl">
                                        <label class="radio inline">
                                            <input type="checkbox" asp-for="RememberMe">
                                            <span> مرا به خاطر بسپار </span>
                                        </label>

                                    </div>


                                </div>

                                <div class="col-12 col-md-6"  >
                                    <input type="submit" class="btnRegister" value="ورود" />
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


